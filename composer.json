{
    "name": "rakshazi/slim-skeleton",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "rakshazi/slim-suit": "@dev"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "config": {
        "vendor-dir": "app/vendor"
    },
	"scripts": {
        "build": "@composer update -o",
        "migrate": "phinx migrate -c app/config/phinx.php",
        "seed": "phinx seed:run -c app/config/phinx.php",
        "start": "$HOME/.composer/vendor/php-kit/php-server/bin/php-server start -a 127.0.0.1 -g -r app/public",
        "stop": "$HOME/.composer/vendor/php-kit/php-server/bin/php-server stop"
	}

}
